# ─────────────────────────────────────────────
#  O-Flyes – environment variables template
#  Copy to .env and fill in your values
# ─────────────────────────────────────────────

# ── General ──────────────────────────────────
NODE_ENV=development

# ── Auth Service (port 3001) ──────────────────
AUTH_PORT=3001
JWT_SECRET=changeme_jwt_secret
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_CALLBACK_URL=http://localhost:3001/auth/callback

# ── Database Service (port 3002) ──────────────
DB_PORT=3002
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=oflyes
POSTGRES_PASSWORD=changeme
POSTGRES_DB=oflyes_db

# ── AI Service (port 3003) ────────────────────
AI_PORT=3003
OPENAI_API_KEY=

# ── Notifications Service (port 3004) ─────────
NOTIF_PORT=3004
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ── Payments Service (port 3005) ──────────────
PAYMENT_PORT=3005
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ── Metrics Service (port 3006) ───────────────
METRICS_PORT=3006

# ── Frontend (port 3000) ──────────────────────
NEXT_PUBLIC_API_AUTH=http://localhost:3001
NEXT_PUBLIC_API_DB=http://localhost:3002
NEXT_PUBLIC_API_AI=http://localhost:3003
NEXT_PUBLIC_API_NOTIF=http://localhost:3004
NEXT_PUBLIC_API_PAYMENT=http://localhost:3005
NEXT_PUBLIC_API_METRICS=http://localhost:3006
